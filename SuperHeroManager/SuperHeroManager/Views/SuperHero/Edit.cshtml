@model SuperHeroManager.Models.SuperHero
@{
    ViewData["Title"] = "Edit";
}

<div class="container text-center">
    <h3 class="display-3 ">Edit</h3>

    <h5 class="display-5 ">@Html.DisplayFor(superhero => superhero.name)</h5>
</div>
<hr style="background-color:white;" />
<div class="card bg-secondary container">

    <div class="text-center">
        <hr />
    </div>
    <form class="form-group" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-6">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="col-6">
                <input asp-for="alterEgo" class="form-control" placeholder="Alter Ego" />
                <span asp-validation-for="alterEgo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input asp-for="universe" class="form-control" placeholder="Universe" />
                <span asp-validation-for="universe" class="text-danger"></span>
            </div>
            <div class="col-6">
                <input asp-for="primaryAbility" class="form-control" placeholder="Primary Ability" />
                <span asp-validation-for="primaryAbility" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input asp-for="secondaryAbility" class="form-control" placeholder="Secondary Ability" />
                <span asp-validation-for="secondaryAbility" class="text-danger"></span>
            </div>
            <div class="col-6">
                <input asp-for="catchPhrase" class="form-control" placeholder="Catch Phrase" />
                <span asp-validation-for="catchPhrase" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6 text-center">
                <input type="submit" value="Edit" class="btn btn-outline-info" asp-action="Edit" />
            </div>
            <div class="col-6 text-center">
                <a class="btn btn-outline-info" asp-action="Index">Back to List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
